# Font
font-family = JetBrainsMono Nerd Font Mono
font-size = 14
font-feature = +liga, +calt  # enable ligatures

# Padding around text
window-padding-x = 6
window-padding-y = 4

# Transparency / blur
background-opacity = 0.9
background-blur = true

# Hide titlebar for a cleaner look
gtk-titlebar = false

keybind = global:alt+enter=new_window
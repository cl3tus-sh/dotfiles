{
  // üéµ Song Title (centered)
  "custom/media-info": {
    "format": "{0}",
    "tooltip": false,
    "justify": "center",
    "max-length": 40,
    "format-icons": {
      "spotify": "\uF001",
      "default": "\uF001"
    },
    "escape": true,
    "exec": "~/.config/waybar/scripts/music.sh --title",
    "interval": 1,
    "on-click": "hyprctl dispatch workspace 9"
  },

  // ‚èÆ Previous Button
  "custom/media-prev": {
    "format": "ÔÅà",
    "tooltip": "Previous",
    "on-click": "~/.config/waybar/scripts/music.sh --prev",
    "interval": "once"
  },

  // ‚èØ Play/Pause Button
  "custom/media-playpause": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/music.sh --icon",
    "on-click": "~/.config/waybar/scripts/music.sh --toggle",
    "interval": 1,
    "tooltip": false
  },

  // ‚è≠ Next Button
  "custom/media-next": {
    "format": "ÔÅë",
    "tooltip": "Next",
    "on-click": "~/.config/waybar/scripts/music.sh --next",
    "interval": "once"
  },

  "custom/spotify-launcher": {
    "format": "ÔÜº",
    "tooltip": "Ouvrir Spotify",
    "on-click": "spotify &",
    "interval": 1,
    "exec": "~/.config/waybar/scripts/spotify-status.sh"
  }
}
